<Pane fx:id="pane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.controller.GameController">
   <ImageView pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../res/img/img_fondo_espacio.png" />
      </image>
   </ImageView>
   <Pane layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0">
      <children>
         <Text fx:id="score" fill="WHITE" layoutX="20.0" layoutY="50.0" text="0">
