               <Font name="Agency FB" size="40.0" />
            </font>
         </Text>
      </children>
   </Pane>
   <children>
      <Canvas fx:id="canvas" />
   </children>
   <AnchorPane fx:id="gameOverScreen" prefHeight="500" prefWidth="500" layoutX="600.0" layoutY="200.0">
